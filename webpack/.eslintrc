{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "prettier",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "d3": false,
        "customElements": true,
        "HTMLImports": true,
        "Polymer": true,
        "ShadyDOM": true

    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"]
    }
}
